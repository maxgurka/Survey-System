@model Tengella.Survey.Data.Models.Survey
@using Tengella.Survey.Data.Models;
@{
	ViewData["Title"] = "Take Survey";
}


	<h1>@Model.Name</h1>

@foreach (var question in Model.Questions)
{
	<div class="question-container border background-theme-secondary">
		<div class="mb-4">
			<p class="lead"><strong>@question.QuestionText</strong></p>
			@if (question.Answers.Any())
			{
				<ul class="list-unstyled">
					@foreach (var answer in question.Answers)
					{
						<li>
							<label class="form-check">
								<input type="radio" class="form-check-input background-theme-secondary" name="question-@question.Id" value="@answer.Id">
								@answer.AnswerText
							</label>
						</li>
					}
				</ul>
			}
			else
			{
				<textarea class="form-control background-theme-secondary" name="question-@question.Id" rows="3"></textarea>
			}
		</div>
	</div>
}

<div class="mb-4">
	<button id="submitSurvey" class="btn accent-theme-secondary" type="button">Submit Now</button>
</div>